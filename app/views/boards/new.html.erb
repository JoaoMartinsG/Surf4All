<div class="container mt-5">
  <div class="p-2 w-100 pt-5"><h2>Create a board:</h2></div>
<%= simple_form_for(@board) do |f| %>
  <%= f.input :description, input_html: { class: 'form-control' } %>
  <%= f.input :type_of_board, input_html: { class: 'form-control' } %>
  <%= f.input :tail_shape, input_html: { class: 'form-control' } %>
  <%= f.input :fins_type, input_html: { class: 'form-control' } %>
  <%= f.input :location, input_html: { class: 'form-control' } %>
  <%= f.input :width, input_html: { class: 'form-control' } %>
  <%= f.input :length, input_html: { class: 'form-control' } %>
  <%= f.input :thickness, input_html: { class: 'form-control' } %>
  <%= f.input :price_per_day, input_html: { class: 'form-control' } %>
  <%= f.input :photos, as: :file, input_html: { multiple: true } %>
  <div class="mt-3">
    <%= link_to "Back", boards_path, class: 'btn btn-success' %>
    <%= f.submit 'Create board', class: 'btn btn-success' %>
  </div>
<% end %>
