<div class="container mt-5 " >
    <div class="my-5 d-flex justify-content-center"><h1><%= @board.type_of_board + ' - ' + @board.location + ' ' + @board.volume.round.to_s + 'L'%> </h1></div>
  <div class="d-flex justify-content-center">
      <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
      <% @board.photos.each_with_index do |photo, index| %>
        <% if index.zero? %>
          <div class="carousel-item active ">
            <%= cl_image_tag photo.key, height: 300, crop: :lfill %>
          </div>
        <% else %>
          <div class="carousel-item">
            <%= cl_image_tag photo.key, height: 300, crop: :lfill %>
          </div>
        <% end %>
      <% end %>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>

      <div class="cardbody-show d-flex justify-content-center">
        <div class="card-body">
            <p><%= @board.description %></p>
            <div class="container d-flex">
                <div class="board-specs">
                  <h5><strong>Board Specs</strong></h5>
                  <ul>
                  <li>Type: <%= @board.type_of_board %></li>
                  <li>Tail: <%= @board.tail_shape %></li>
                  <li>Fin: <%= @board.fins_type %></li>
                  <li>Width: <%= @board.width %> cm</li>
                  <li>Length: <%= @board.length %> cm</li>
                  <li>Thickness: <%= @board.thickness %> cm</li>
                  <li>Volume: <%= @board.volume %> L</li>
                  </ul>
                </div>
                <div class="price">
                  <h2><strong>Price per day:</strong> </h2><h3><strong><%= @board.price_per_day %>$</strong></h3>
                </div>
            </div>
            <div class="my-3 d-flex justify-content-center">
            <%= link_to 'BOOK ME', new_board_booking_path(@board), class: 'btn btn-primary btn-lg' %>
            </div>
        </div>
      </div>

  </div>




</div>
